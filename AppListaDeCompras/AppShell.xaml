<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppListaDeCompras.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppListaDeCompras.Views"
    Title="AppListaDeCompras"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Listas"
            ContentTemplate="{DataTemplate local:ListToBuyPage}"
            Icon="icon_list.svg"
            Route="ListToBuy" />
        <ShellContent
            Title="Perfil"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Icon="icon_profile.svg"
            Route="Profile" />
    </TabBar>

</Shell>
